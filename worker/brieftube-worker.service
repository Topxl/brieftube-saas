[Unit]
Description=BriefTube SaaS Worker (Telegram Bot + Video Processor)
After=network.target

[Service]
Type=simple
User=vj
WorkingDirectory=/home/vj/Bureau/Projets/BriefTube/worker
ExecStart=/home/vj/Bureau/Projets/BriefTube/worker/venv/bin/python main.py
Restart=on-failure
RestartSec=10
Environment=PYTHONUNBUFFERED=1
StandardOutput=append:/home/vj/Bureau/Projets/BriefTube/worker/worker.log
StandardError=append:/home/vj/Bureau/Projets/BriefTube/worker/worker.log

[Install]
WantedBy=multi-user.target
